# =============================================================================
# Blueberry Bot - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Telegram Bot Configuration (Required)
# -----------------------------------------------------------------------------

# Your Telegram Bot Token from @BotFather
bot_token=your_bot_token_here

# Bot mode: "polling" for development, "webhook" for production
# Default: polling
TG_MODE=polling

# -----------------------------------------------------------------------------
# Webhook Configuration (Required only if TG_MODE=webhook)
# -----------------------------------------------------------------------------

# Your server's public URL (must be HTTPS)
LIVE_SERVER_URL=https://your-domain.com

# Port for webhook server
# Default: 8443
PORT=8443

# Path to SSL certificate file (optional, for self-signed certs)
# ssl_cert_file_loc=/path/to/cert.pem

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# Database type: "postgres" or "sqlite"
# Default: sqlite (easier for development, no setup required)
DB_TYPE=sqlite

# SQLite Configuration (used when DB_TYPE=sqlite)
# Path to SQLite database file (relative to project root)
SQLITE_PATH=blueberry.db

# PostgreSQL Configuration (used when DB_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=blueberry_db

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
# Use DEBUG for detailed logging (also enables console output)
LOG_LEVEL=INFO

# Logs are stored in logs/app.log (auto-rotated at 5MB, keeps 5 backups)
